---
import { Image } from 'astro:assets';
const { img, alt, title, content, color } = Astro.props;
---

<section class="PhotoSection">
    <Image src={img} alt={alt} />
    <h2 class="PhotoSection__title">{title}</h2>
    <p class="PhotoSection__content">{content}</p>
</section>

<style lang="scss">
    .PhotoSection {
      width : 50vw;
      height : 65vh;
      float: left;
      min-height: 35rem;

      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: flex-end;

      h2,p {
        position: relative;
        max-width: 50%;
        text-align: center;
        margin-bottom: 3rem;
      }

      img {
        position: absolute;
        width : 50vw;
        height: 65vh;
        min-height: 35rem;
        object-fit: cover;
      }
    }
</style>