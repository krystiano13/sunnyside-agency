---
import { Image } from "astro:assets";
import { testimonialsData } from "../utils/testimonialsData";
---

<section class="Testimonials">
    <h2 class="Testimonials__title">CLIENT TESTIMONIALS</h2>
    <div class="Testimonials__items">
        {
            testimonialsData.map(item => (
                    <section class="Testimonials__items__item">
                        <Image src={item.img} alt={item.alt} />
                        <p class="Testimonials__items__item__text">{item.text}</p>
                        <h3 class="Testimonials__items__item__name">{item.name}</h3>
                        <p class="Testimonials__items__item__job">{item.job}</p>
                    </section>
            ))
        }
    </div>
</section>

<style lang="scss">
    .Testimonials {
      width : 100vw;
      height : 90vh;
      min-height: 35rem;
      background-color: var(--white);

      @media screen and (orientation: portrait) and (max-width: 821px) {
        height : 180vh;
        min-height: 50rem;
      }

      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;

      &__title {
        text-align: center;
        font-family: 'Fraunces', sans-serif;
        color: var(--darkGrayishBlue);
        font-size : 2rem;
        letter-spacing: .5rem;
        height : 20%;
        display: flex;
        align-items: center;
        transform: translateY(50%);

        @media screen and (orientation: portrait) and (max-width: 821px) {
          font-size: 1.7rem;
        }
      }

      &__items {
        display: flex;
        justify-content: space-evenly;
        align-items: center;

        width : 80%;
        max-width : 80%;
        height : 70%;
        margin-top : 3rem;

        @media screen and (orientation: portrait) and (max-width: 821px) {
          flex-direction: column;
          height : 230%;
        }

        &__item {
          width : 25%;
          height: 100%;
          display: flex;
          flex-direction: column;
          align-items: center;
          text-align: center;
          padding-top: 10%;

          @media screen and (orientation: portrait) and (max-width: 821px) {
            width : 100%;
            height : 25%;
          }

          img {
            width : 25%;
            height: auto;
            border-radius: 100%;
            object-fit: cover;
          }

          &__text {
            font-family: 'Barlow', sans-serif;
            margin-top : 2rem;
            margin-bottom: 2rem;
            color: var(--veryDarkGrayishBlue);
            font-size : 1.2rem;
            height : 20%;

            @media screen and (orientation: portrait) and (max-width: 400px) {
              font-size: 1rem;
            }

            @media screen and (orientation: portrait) and (max-width: 600px) and (min-width: 401px) {
              font-size: 1.1rem;
            }
          }

          &__name {
            font-family: 'Fraunces', sans-serif;
            font-size: 1.3rem;
            font-weight: 900;
            color: var(--veryDarkDesaturatedBlue);
          }

          &__job {
            margin-top: 1rem;
            font-family: 'Barlow', sans-serif;
            font-size: 18px;
            color: var(--grayishBlue);
          }
        }
      }
    }
</style>